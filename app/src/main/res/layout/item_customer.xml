<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:layout_width="80dp"
        android:id="@+id/customerImage"
        android:layout_height="80dp"
        tools:background="#000"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marcelo Berrocal - 0091203"
        android:layout_marginLeft="15dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text=""
        android:id="@+id/customerName"
        app:layout_constraintLeft_toRightOf="@+id/customerImage"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Phone number: +52 449 8612 356"
        android:textSize="15dp"
        android:text=""
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/customerName"
        android:id="@+id/customerPhone"
        app:layout_constraintLeft_toRightOf="@+id/customerImage"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rol: Customer"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/customerPhone"
        android:id="@+id/customerRol"
        app:layout_constraintLeft_toRightOf="@+id/customerImage"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/customerRol"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>